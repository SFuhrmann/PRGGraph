  </tr>

<% @vertices.each do |vertex| %>
  <tr>
    <td><%= vertex.name %></td>
    <td><%= link_to 'Show', vertex %></td>
    <td><%= link_to 'Edit', edit_vertex_path(vertex) %></td>
    <td><%= link_to 'Destroy', vertex, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

